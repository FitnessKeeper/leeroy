#!/usr/bin/env ruby

require 'dotenv'
Dotenv.load

if ENV['ENVIRONMENT'] == 'development'
  require 'bundler/setup'
end

lib = File.expand_path('../lib', __FILE__)
$LOAD_PATH.unshift(lib) unless $LOAD_PATH.include?(lib)

require 'leeroy/app'

include Leeroy::App

